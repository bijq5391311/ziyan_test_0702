  <!-- 物流信息，订单信息 商品信息 -->
  <div class="compose-message-editor">
    <table width="100%" border="0" class="wuliu">
      <tbody>
      <tr>
        <td class="padding_10">物流信息：</td>
      </tr>
      <tr>
        <td class="border-bottom-0">
          <table width="90%" class="margin-5-auto">
            <tbody>
            <tr>
              <td>物流公司：</td>
              <td>{$logisticsCompany$}</td>
            </tr>
            <tr>
              <td>物流单号：</td>
              <td>{$logisticsCode$}</td>
            </tr>
            </tbody>
          </table>
        </td>
      </tr>
      </tbody>
    </table>

    <table width="100%" border="0" class="wuliu">
      <tbody>
      <tr>
        <td class="padding_10">订单信息：</td>
      </tr>
      <tr>
        <td class="border-bottom-0">
          <table width="90%" class="margin-5-auto">
            <tbody>
            <tr>
              <td>订单编号：</td>
              <td>{$tradeid$}(点击订单号，可以查看订单详情)</td>
            </tr>
            <tr>
              <td>订单日期：</td>
              <td>{$date$}</td>
            </tr>
            <tr>
              <td>实付金额：</td>
              <td>{$money$}元</td>
            </tr>
            </tbody>
          </table>
        </td>
      </tr>
      </tbody>
    </table>
    <table width="100%" border="0" class="wuliu">
      <tbody>
      <tr>
        <td class="padding_10">所购商品：</td>
      </tr>
      <tr>
        <td>
          <table width="90%" class="margin-5-auto produce_list">
            <thead>
            <tr class="produce_title">
              <td>商品名称</td>
              <td align="right">数量</td>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td>商品名称</td>
              <td align="right">3</td>
            </tr>
            <tr>
              <td>商品名称</td>
              <td align="right">12</td>
            </tr>
            </tbody>
          </table>
        </td>
      </tr>
      </tbody>
    </table>
  </div>

  <!-- 推荐商品 -->
