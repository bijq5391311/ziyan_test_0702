<% include ../../../include/layout/start.ejs %>
<div id="example" v-cloak>
  <div class="template-page">
    <div class="tmp-page__content">
      <el-row>
        <el-col :span="24">
          <div class="el-block-box is-gray-bg">
            <el-form inline class="text-right">
              <el-form-item label="时间段：" class="no-margin">
                <el-form-grid size="lg">
                  <el-date-picker type="daterange"
                                  placeholder="请选择时间范围" v-model="daterange">
                  </el-date-picker>
                </el-form-grid>
                <el-form-grid>
                  <el-button type="primary">搜索</el-button>
                  <el-button>重置</el-button>
                </el-form-grid>
              </el-form-item>
            </el-form>
          </div>
          <el-panel
            class="mt-md"
            title="会员等级分布"
            type="gray"
            border>
            <template slot="actions">
              <el-form-grid>颗粒度：</el-form-grid>
              <el-form-grid size="xxs">
                <el-select v-model="keli">
                  <el-option label="天" value="1"></el-option>
                  <el-option label="月" value="2"></el-option>
                </el-select>
              </el-form-grid>
            </template>
            <el-row>
              <el-col :span="12">
                <business-echarts :options="sourceChart1" auto-resize
                                  style="width:100%; height: 340px;"></business-echarts>
              </el-col>
              <el-col :span="12">
                <business-echarts :options="levelChart" auto-resize
                                  style="width:100%; height: 340px;"></business-echarts>
              </el-col>
            </el-row>
          </el-panel>

          <el-panel
            class="mt-md"
            title="会员增长趋势"
            type="gray"
            border>
            <template slot="actions">
              <el-form-grid>颗粒度：</el-form-grid>
              <el-form-grid size="xxs">
                <el-select v-model="keli">
                  <el-option label="天" value="1"></el-option>
                  <el-option label="月" value="2"></el-option>
                </el-select>
              </el-form-grid>
            </template>
            <business-echarts :options="option" class="oscillogram" auto-resize
                              style="width:100%; height: 340px;"></business-echarts>
          </el-panel>
        </el-col>
      </el-row>
    </div>
  </div>
</div>
<% include ../../../include/layout/end.ejs %>
