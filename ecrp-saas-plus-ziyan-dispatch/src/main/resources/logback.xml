	<logger name="org.springframework.jdbc.core.JdbcTemplate" level="debug"></logger>

	<logger name="org.springframework.jdbc.core.StatementCreatorUtils"
		additivity="false" level="TRACE">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="org.springframework.jdbc.core" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="STDOUT" />
	</logger>
	<!-- <logger name="java.sql.Connection" additivity="true"> <level value="DEBUG" 
		/> <appender-ref ref="STDOUT" /> </logger> -->
	<logger name="java.sql.Statement" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="java.sql.PreparedStatement" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="STDOUT" />
	</logger>
	<!-- <logger name="java.sql.ResultSet" additivity="true"> <level value="DEBUG" 
		/> <appender-ref ref="STDOUT" /> </logger> -->
	<!-- 配置按天保存日志保存30天有效日志 -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/logs/ecrp_task.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
		</encoder>
	</appender>
	<!-- 配置按天保存日志结束 -->
	<root level="info">
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>  